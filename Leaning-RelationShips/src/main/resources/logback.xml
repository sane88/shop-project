<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="com.test.project" level="warn"/>

    <root level="warn">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>